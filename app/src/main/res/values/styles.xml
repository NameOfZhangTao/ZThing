<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="titleTextColor">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="android:popupBackground">@color/colorPrimary</item>
        <item name="overlapAnchor">false</item>
    </style>

    <style name="AppTheme.Start">
        <item name="android:windowBackground">@color/colorPrimaryDark</item>
        <!--<item name="windowNoTitle">true</item>-->
    </style>

    <style name="Line">
        <item name="android:background">#888888</item>
    </style>

    <style name="Line.Vertical">
        <item name="android:layout_width">0.5dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Line.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
    </style>

    <style name="Theme.AppTheme.Light.DarkActionBar" parent="Theme.AppCompat.Light.DarkActionBar"/>

</resources>